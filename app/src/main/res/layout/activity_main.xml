<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#222222">

    <TextView
        android:id="@+id/inputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:gravity="end"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:background="#333333" />

    <TextView
        android:id="@+id/resultField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="end"
        android:textColor="#FFEB3B"
        android:padding="10dp"
        android:background="#444444"
        android:text="0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:paddingTop="10dp">

        <Button android:id="@+id/btn7" android:text="7" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn8" android:text="8" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn9" android:text="9" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btnDivide" android:text="/" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#F44336"/>

        <Button android:id="@+id/btn4" android:text="4" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn5" android:text="5" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn6" android:text="6" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btnMultiply" android:text="*" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#F44336"/>

        <Button android:id="@+id/btn1" android:text="1" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn2" android:text="2" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btn3" android:text="3" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btnMinus" android:text="-" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#F44336"/>

        <Button android:id="@+id/btn0" android:text="0" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btnDot" android:text="." android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#FF9800"/>
        <Button android:id="@+id/btnEqual" android:text="=" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#F44336"/>
        <Button android:id="@+id/btnPlus" android:text="+" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_columnWeight="1" android:background="#F44336"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnClear"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="C"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnBackspace"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âŒ«"
            android:background="#F44336"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
